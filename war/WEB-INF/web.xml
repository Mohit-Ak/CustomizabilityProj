<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

 <servlet>
    <servlet-name>ArticlePageServlet</servlet-name>
    <servlet-class>com.ub.customizability.servlet.ArticlePageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ArticlePageServlet</servlet-name>
    <url-pattern>/Article</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>HomePageServlet</servlet-name>
    <servlet-class>com.ub.customizability.servlet.HomePageServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>HomePageServlet</servlet-name>
    <url-pattern>/Home</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.ub.customizability.servlet.LoginServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/UserLogin</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.ub.customizability.servlet.LogoutServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/UserLogout</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>AuthenticateServlet</servlet-name>
    <servlet-class>com.ub.customizability.servlet.AuthenticateServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>AuthenticateServlet</servlet-name>
    <url-pattern>/UserAuthenticate</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>SettingsServlet</servlet-name>
    <servlet-class>com.ub.customizability.servlet.SettingsServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>SettingsServlet</servlet-name>
    <url-pattern>/UserSettings</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>SaveSettingsServlet</servlet-name>
    <servlet-class>com.ub.customizability.servlet.SaveSettingsServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>SaveSettingsServlet</servlet-name>
    <url-pattern>/SaveSettings</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>UpdateTimeServlet</servlet-name>
    <servlet-class>com.ub.customizability.servlet.UpdateTimeServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>UpdateTimeServlet</servlet-name>
    <url-pattern>/UpdateTime</url-pattern>
  </servlet-mapping>
  
